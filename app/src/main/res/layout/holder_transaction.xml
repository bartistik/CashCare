<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recycler_holder_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/category_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:paddingStart="@dimen/recycler_holder_padding"
        android:paddingEnd="@dimen/recycler_holder_padding"
        android:textColor="@color/green_income"
        android:textSize="@dimen/recycler_text_size" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amount_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/category_Tv"
        android:gravity="end"
        android:paddingStart="@dimen/recycler_holder_padding"
        android:paddingEnd="@dimen/recycler_holder_padding"
        android:textSize="@dimen/recycler_holder_amount_text_size" />

</RelativeLayout>